<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cv.Controller.CVlistController"
      spacing="10">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <children>
        <Text text="Manage Saved CVs">
            <font>
                <Font size="24.0" />
            </font>
        </Text>

        <TableView fx:id="cvTable" prefHeight="600.0" prefWidth="760.0">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="200.0" />
                <TableColumn fx:id="emailColumn" text="Email" prefWidth="250.0" />
                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="200.0" />
            </columns>
        </TableView>

        <HBox spacing="10">
            <children>
                <Button text="View Selected" onAction="#onViewClicked" />
                <Button text="Delete Selected" onAction="#onDeleteClicked" />
                <Button text="Back" onAction="#onBackClicked" />
            </children>
        </HBox>
    </children>
</VBox>